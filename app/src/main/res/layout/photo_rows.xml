<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/imagen_secundario"
        android:layout_height="70dp"
        android:layout_marginRight="2dp"
        android:contentDescription="@string/hello_blank_fragment"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/photoId"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="124"
            android:textSize="@dimen/texto_id_secundario" />

        <TextView
            android:id="@+id/photoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto_titulo_secundario"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:text="asldkas aslkalskdalskdajsld aslkdjasldkjasd aslkasldkasj lkasjdlak sdjalsdkjasldk ajsdlk"
            />
    </LinearLayout>

</LinearLayout>